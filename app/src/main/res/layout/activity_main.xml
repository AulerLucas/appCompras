<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxo"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/roxoEscuro"
        android:gravity="center"
        android:text="Comprar"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <CheckBox
        android:id="@+id/chkarroz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Arroz" />


    <CheckBox
        android:id="@+id/chkleite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Leite" />


    <CheckBox
        android:id="@+id/chkcarne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Arroz" />


    <CheckBox
        android:id="@+id/chkfeijao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="FeijÃ£o" />



    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chkfeijao"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="Calcular"
        android:textColor="@color/white"
        android:backgroundTint="@color/roxoEscuro"/>
</RelativeLayout>